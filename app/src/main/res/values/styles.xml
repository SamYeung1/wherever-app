<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.DialogDate</item>

        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBarWithFit" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <!--ImagePicker-->
    <style name="AppTheme.ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>
    </style>
    <!--BottomNavigation-->
    <style name="AppTheme.BottomNavigation">
        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>
    </style>
    <style name="AppTheme.ActionBar.Title" parent="Base.TextAppearance.AppCompat.Title">

    </style>
    <!--ActionBar-->
    <style name="AppTheme.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">5dp</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>
    <!--ActionBarDark-->
    <style name="AppTheme.ActionBarDark" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">5dp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>
    <!--Button-->
    <style name="AppTheme.BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:radius">@dimen/view_radius</item>
        <item name="android:elevation">5dp</item>
    </style>
    <style name="AppTheme.PrimaryButton" parent="AppTheme.BaseButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>
    <style name="AppTheme.PrimaryButtonBorder" parent="AppTheme.BaseButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_button_primary_border</item>
    </style>
    <style name="AppTheme.AccentButton" parent="AppTheme.BaseButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_accent</item>
    </style>
    <style name="AppTheme.AccentButtonBorder" parent="AppTheme.BaseButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/bg_button_accent_border</item>
    </style>
    <!--Text-->
    <style name="AppTheme.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="AppTheme.SubHeader" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.Value" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#818181</item>
    </style>
    <!--SeekBar-->
    <style name="AppTheme.SeekBar" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="android:thumb">@drawable/bg_seek_bar_thumb</item>
        <item name="tickMark">@drawable/bg_seek_bar_tick</item>
    </style>
    <!--BottomSheetDialog-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>

    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.BottomSheetDialog" parent="BaseBottomSheetDialog"/>
    <!--DialogForLoading-->
    <style name="AppTheme.DialogLoading" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Dialog-->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:windowTitleStyle">@style/AppTheme.Dialog.WindowTitle</item>
    </style>
    <style name="AppTheme.Dialog.WindowTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>
    <!--TimeDatePicker-->
    <style name="AppTheme.DialogDate" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--TabLayout-->
    <style name="AppTheme.AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">500dp</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabRippleColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/AppTheme.AppTabTextAppearance</item>
    </style>

    <!-- for text -->
    <style name="AppTheme.AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
