<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    android:layout_height="70dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_primary_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="2dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_person"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="0dp"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:foreground="@drawable/bg_selectable_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/avatars" />
        <android.support.v7.widget.AppCompatImageView
                android:visibility="invisible"
                android:tint="@color/colorFavourite"
                android:layout_width="20dp"
                android:layout_height="20dp" app:srcCompat="@drawable/ic_star_white_24dp"
                android:id="@+id/img_star" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>