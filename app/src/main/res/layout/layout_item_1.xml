<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
            android:text="Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_view_tv_value"
            android:maxEms="10"
            android:ellipsize="start"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/item_view_img_icon_image"
            app:layout_constraintBottom_toBottomOf="@+id/item_view_img_icon_image"
            android:textAppearance="@style/AppTheme.Value"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/image_view_img_edit"
            app:layout_constraintStart_toEndOf="@+id/item_view_tv_title" android:layout_marginStart="8dp"
            android:singleLine="true"/>
    <android.support.v7.widget.AppCompatTextView
            android:textColor="@color/colorAccent"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_view_tv_title"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/item_view_img_icon_image"
            app:layout_constraintBottom_toBottomOf="@+id/item_view_img_icon_image"
            android:textAppearance="@style/AppTheme.SubHeader" app:layout_constraintStart_toEndOf="@+id/item_view_img_icon_image"/>
    <android.support.v7.widget.AppCompatImageView
            android:tint="@color/colorAccent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/item_view_img_icon_image"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <android.support.v7.widget.AppCompatImageView
            android:tint="@android:color/darker_gray"
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@drawable/ic_edit_gray_24dp"
            android:id="@+id/image_view_img_edit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_view_tv_value"
            app:layout_constraintTop_toTopOf="@+id/item_view_tv_value"/>
</android.support.constraint.ConstraintLayout>